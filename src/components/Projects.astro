	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
		margin-bottom: 1.5rem;
	}

	.project-card {
		background: var(--bg-card);
		border: 1px solid var(--border);
		border-radius: 1rem;
		padding: 1.5rem;
		transition: all 0.2s;
	}

	.project-card:hover {
		border-color: var(--accent);
		transform: translateY(-4px);
	}

	h3 {
		font-size: 1.25rem;
		margin-bottom: 0.5rem;
	}

	p {
		color: var(--text-secondary);
		margin-bottom: 1rem;
	}

	.tech-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1rem;
	}

	.tech {
		background: rgba(99, 102, 241, 0.1);
		border: 1px solid rgba(99, 102, 241, 0.3);
		color: var(--accent);
		padding: 0.25rem 0.5rem;
		border-radius: 0.25rem;
		font-size: 0.75rem;
		font-weight: 500;
	}

	.project-link {
		font-weight: 500;
	}

	.note {
		text-align: center;
		color: var(--text-secondary);
		font-style: italic;
	}
</style>
