<section id="proyectos">
	<h2>Proyectos</h2>
	
	<div class="projects-grid">
		{projects.map((project) => (
			<article class="project-card">
				<h3>{project.name}</h3>
				<p>{project.description}</p>
				<div class="tech-tags">
					{project.tech.map((t) => (
						<span class="tech">{t}</span>
