---
const projects = [
	{
		name: "PORTFOLIO V2",
		description: "Este sitio. Diseño inspirado en portfolios creativos con estética dark y acentos neón.",
		tech: ["ASTRO", "CSS"],
		index: "01"
	}
];
---

<section id="proyectos">
	<div class="section-header">
		<span class="section-index">04</span>
		<h2>PROYECTOS</h2>
	</div>
	
	<div class="projects-grid">
		{projects.map((project) => (
			<article class="project-card">
				<div class="project-index">{project.index}</div>
				<div class="project-content">
					<h3>{project.name}</h3>
					<p>{project.description}</p>
					<div class="tech-tags">
						{project.tech.map((t) => (
							<span class="tech">{t}</span>
						))}
					</div>
				</div>
			</article>
		))}
		
		<article class="project-card coming-soon">
			<div class="project-index">++</div>
			<div class="project-content">
				<h3>MÁS PRONTO<span class="accent">.</span></h3>
				<p>Proyectos de AI, automatización y más en desarrollo.</p>
			</div>
		</article>
	</div>
</section>

<style>
	section {
		padding: 4rem 0;
	}

	.section-header {
		display: flex;
		align-items: center;
		gap: 2rem;
		margin-bottom: 4rem;
	}

	.section-index {
		font-family: 'Anton', sans-serif;
		font-size: 1rem;
		color: var(--accent);
		letter-spacing: 0.1em;
	}

	h2 {
		font-size: clamp(2rem, 5vw, 4rem);
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
	}

	.project-card {
		display: grid;
		grid-template-columns: 80px 1fr;
		gap: 1.5rem;
		padding: 2rem;
		background: var(--bg-card);
		border: 1px solid var(--border);
		transition: all 0.3s;
	}

	.project-card:hover {
		border-color: var(--accent);
		transform: translateY(-4px);
	}

	.project-index {
		font-family: 'Anton', sans-serif;
		font-size: 3rem;
		color: var(--border);
		line-height: 1;
	}

	.project-card:hover .project-index {
		color: var(--accent);
	}

	h3 {
		font-size: 1.5rem;
		margin-bottom: 0.75rem;
	}

	.accent {
		color: var(--accent);
	}

	p {
		color: var(--text-secondary);
		font-size: 0.875rem;
		margin-bottom: 1.5rem;
		line-height: 1.6;
	}

	.tech-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.tech {
		background: transparent;
		border: 1px solid var(--accent);
		color: var(--accent);
		padding: 0.375rem 0.75rem;
		font-size: 0.625rem;
		font-weight: 600;
		letter-spacing: 0.1em;
	}

	.coming-soon {
		border-style: dashed;
		opacity: 0.6;
	}

	.coming-soon:hover {
		opacity: 1;
	}

	@media (max-width: 768px) {
		.projects-grid {
			grid-template-columns: 1fr;
		}

		.project-card {
			grid-template-columns: 60px 1fr;
		}
	}
</style>
