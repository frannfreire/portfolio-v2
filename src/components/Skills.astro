---
const skillGroups = [
	{
		name: "FRONTEND",
		skills: ["HTML", "CSS", "JavaScript", "TypeScript", "React", "Tailwind", "Astro", "WordPress"]
	},
	{
		name: "BACKEND",
		skills: ["Node.js", "Express", "Python", "Rust", "Lua", "MongoDB", "MySQL", "SurrealDB"]
	},
	{
		name: "AI & AUTOMATION",
		skills: ["LangChain", "Mastra", "n8n", "Make", "Prompt Engineering"]
	},
	{
		name: "DEVOPS",
		skills: ["Git", "Docker", "Portainer", "Grafana", "Prometheus"]
	}
];
---

<section id="skills">
	<div class="section-header">
		<span class="section-index">03</span>
		<h2>HABILIDADES</h2>
	</div>
	
	<div class="skills-container">
		{skillGroups.map((group, i) => (
			<div class="skill-group">
				<div class="group-header">
					<span class="group-index">0{i + 1}</span>
					<h3>{group.name}</h3>
				</div>
				<div class="tags">
					{group.skills.map((skill) => (
						<span class="tag">{skill}</span>
					))}
				</div>
			</div>
		))}
	</div>

	<div class="extra-skills">
		<span>VR/XR</span>
		<span>•</span>
		<span>RESPONSIVE DESIGN</span>
		<span>•</span>
		<span>ACCESSIBILITY</span>
		<span>•</span>
		<span>SCRUM</span>
		<span>•</span>
		<span>KANBAN</span>
	</div>
</section>

<style>
	section {
		padding: 4rem 0;
	}

	.section-header {
		display: flex;
		align-items: center;
		gap: 2rem;
		margin-bottom: 4rem;
	}

	.section-index {
		font-family: 'Anton', sans-serif;
		font-size: 1rem;
		color: var(--accent);
		letter-spacing: 0.1em;
	}

	h2 {
		font-size: clamp(2rem, 5vw, 4rem);
	}

	.skills-container {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 3rem;
		margin-bottom: 4rem;
	}

	.skill-group {
		padding: 2rem;
		background: var(--bg-card);
		border: 1px solid var(--border);
		transition: all 0.3s;
	}

	.skill-group:hover {
		border-color: var(--accent);
	}

	.group-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1.5rem;
	}

	.group-index {
		font-family: 'Anton', sans-serif;
		font-size: 0.875rem;
		color: var(--text-secondary);
	}

	h3 {
		font-size: 1.25rem;
		letter-spacing: 0.1em;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.tag {
		background: var(--bg-primary);
		border: 1px solid var(--border);
		padding: 0.5rem 1rem;
		font-size: 0.75rem;
		font-weight: 500;
		letter-spacing: 0.05em;
		color: var(--text-secondary);
		transition: all 0.2s;
	}

	.tag:hover {
		border-color: var(--accent);
		color: var(--accent);
	}

	.extra-skills {
		display: flex;
		justify-content: center;
		flex-wrap: wrap;
		gap: 1rem;
		padding: 2rem;
		border-top: 1px solid var(--border);
		border-bottom: 1px solid var(--border);
		font-size: 0.75rem;
		letter-spacing: 0.2em;
		color: var(--text-secondary);
	}

	@media (max-width: 768px) {
		.skills-container {
			grid-template-columns: 1fr;
		}
	}
</style>
