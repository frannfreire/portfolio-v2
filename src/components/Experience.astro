---
const experiences = [
	{
		company: "WeShopU",
		role: "Developer",
		period: "MAR — MAY 2025",
		location: "USA",
		index: "01",
		tasks: [
			"CRM management en Airtable",
			"Mantenimiento de Shopify",
			"Automatización de procesos",
			"Desarrollo web"
		]
	},
	{
		company: "VertexStudio",
		role: "Full Stack Developer",
		period: "ABR 2021 — JUN 2025",
		location: "EL SALVADOR",
		index: "02",
		tasks: [
			"Realidad virtual web para metaverso healthcare",
			"Desarrollo de bots para Discord",
			"Code improvements y refactoring"
		]
	},
	{
		company: "Hospocket",
		role: "Frontend Developer",
		period: "FEB — ABR 2021",
		location: "USA",
		index: "03",
		tasks: [
			"UI components con React y Chakra",
			"Integración de diseño responsive",
			"Bug fixing en frontend"
		]
	}
];
---

<section id="experiencia">
	<div class="section-header">
		<span class="section-index">02</span>
		<h2>EXPERIENCIA</h2>
	</div>
	
	<div class="timeline">
		{experiences.map((exp) => (
			<article class="exp-card">
				<div class="exp-index">{exp.index}</div>
				<div class="exp-content">
					<div class="exp-header">
						<div>
							<h3>{exp.company}</h3>
							<p class="role">{exp.role}</p>
						</div>
						<div class="exp-meta">
							<span class="period">{exp.period}</span>
							<span class="location">{exp.location}</span>
						</div>
					</div>
					<ul class="tasks">
						{exp.tasks.map((task) => (
							<li>{task}</li>
						))}
					</ul>
				</div>
			</article>
		))}
	</div>
</section>

<style>
	section {
		padding: 4rem 0;
	}

	.section-header {
		display: flex;
		align-items: center;
		gap: 2rem;
		margin-bottom: 4rem;
	}

	.section-index {
		font-family: 'Anton', sans-serif;
		font-size: 1rem;
		color: var(--accent);
		letter-spacing: 0.1em;
	}

	h2 {
		font-size: clamp(2rem, 5vw, 4rem);
	}

	.timeline {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.exp-card {
		display: grid;
		grid-template-columns: 80px 1fr;
		gap: 2rem;
		padding: 2rem;
		background: var(--bg-card);
		border: 1px solid var(--border);
		transition: all 0.3s;
	}

	.exp-card:hover {
		border-color: var(--accent);
		transform: translateX(8px);
	}

	.exp-index {
		font-family: 'Anton', sans-serif;
		font-size: 3rem;
		color: var(--border);
		line-height: 1;
	}

	.exp-card:hover .exp-index {
		color: var(--accent);
	}

	.exp-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 1.5rem;
		flex-wrap: wrap;
		gap: 1rem;
	}

	h3 {
		font-size: 1.5rem;
		margin-bottom: 0.25rem;
	}

	.role {
		color: var(--accent);
		font-weight: 500;
		font-size: 0.875rem;
		letter-spacing: 0.05em;
	}

	.exp-meta {
		text-align: right;
	}

	.period {
		display: block;
		font-size: 0.875rem;
		font-weight: 600;
		letter-spacing: 0.05em;
		color: var(--text-primary);
	}

	.location {
		font-size: 0.75rem;
		color: var(--text-secondary);
		letter-spacing: 0.1em;
	}

	.tasks {
		list-style: none;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 0.75rem;
	}

	.tasks li {
		color: var(--text-secondary);
		font-size: 0.875rem;
		padding-left: 1.5rem;
		position: relative;
	}

	.tasks li::before {
		content: "→";
		position: absolute;
		left: 0;
		color: var(--accent);
	}

	@media (max-width: 768px) {
		.exp-card {
			grid-template-columns: 1fr;
			gap: 1rem;
		}

		.exp-index {
			font-size: 2rem;
		}

		.exp-header {
			flex-direction: column;
		}

		.exp-meta {
			text-align: left;
		}
	}
</style>
