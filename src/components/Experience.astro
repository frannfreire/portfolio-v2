<section id="experiencia">
	<h2>Experiencia</h2>
	
	<div class="timeline">
		{experiences.map((exp) => (
			<article class="exp-card">
				<div class="exp-header">
					<div>
						<h3>{exp.company}</h3>
						<p class="role">{exp.role}</p>
					</div>
					<div class="exp-meta">
						<span class="period">{exp.period}</span>
						<span class="location">{exp.location}</span>
					</div>
				</div>
				<ul class="tasks">
					{exp.tasks.map((task) => (
						<li>{task}</li>
					))}
				</ul>
			</article>
		))}
	</div>
</section>

